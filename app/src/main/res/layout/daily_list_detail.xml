<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:background="#fff3f6f9"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:id="@+id/textTitleUp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|left"
        android:background="#7c000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textTitleDown"
        android:layout_below="@+id/imageTitle"
        android:layout_alignParentLeft="true"
        android:textColor="#ff424242"
        android:background="#fffbfbfb"
        android:gravity="center_vertical|left" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView7"
        android:layout_below="@+id/imageTitle"
        android:layout_alignParentRight="true"
        android:src="@drawable/kuailan_comment"
        android:layout_marginRight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="404"
        android:id="@+id/textNumber"
        android:layout_alignBottom="@+id/textTitleDown"
        android:textColor="#fff49921"
        android:layout_alignRight="@+id/textTitleDown"
        android:layout_marginRight="8dp" />

</RelativeLayout>